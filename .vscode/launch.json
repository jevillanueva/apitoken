{
    "version": "0.2.0",
    "configurations": [
        {
            "envFile": "${workspaceFolder}/.env",

            "name": "Python: Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "app.main:app", "--host", "0.0.0.0" ,"--port", "8000" , "--reload"
            ]
        },
        {
            "envFile": "${workspaceFolder}/.env",

            "name": "Python: Run Single File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
        }
    ]
}